{
  "name": "dxu-micro-boilertemplate-fe",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "copy .env.development .env && vite",
    "dev:linux": "cp .env.development .env && vite",
    "build": "copy .env.production .env && tsc && vite build",
    "build:linux": "cp .env.production .env && tsc && vite build",
    "build-vercel": "cp .env.development .env && tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext js,ts,tsx",
    "lint-fix": "eslint . --ext js,ts,tsx",
    "format": "prettier --write **/*.{js,ts,tsx} && eslint . --ext js,ts,tsx --fix",
    "postinstall": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,ts,tsx}": [
      "yarn lint",
      "yarn lint-fix",
      "yarn format",
      "git add ."
    ]
  },
  "dependencies": {
    "@tanstack/react-query": "^4.36.1",
    "axios": "^1.5.1",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "lodash": "^4.17.21",
    "lucide-react": "^0.285.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-query": "^3.39.3",
    "react-router-dom": "^6.16.0",
    "tailwind-merge": "^1.14.0",
    "tailwindcss-animate": "^1.0.7",
    "zustand": "^4.4.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.1",
    "@commitlint/config-conventional": "^17.4.0",
    "@tanstack/eslint-plugin-query": "^4.36.1",
    "@types/node": "^20.8.4",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@types/webpack-env": "^1.15.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react-swc": "^3.3.2",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1",
    "postcss": "^8.4.31",
    "prettier": "^2.4.1",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.0.2",
    "vite": "^4.4.5"
  }
}
